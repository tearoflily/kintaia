

<%= form_with(model: @user, url: update_waiting_user_attendances_path(@user.id), local: true, method: :post) do |f| %>
	氏名：<%= @user.name %>
	
	<table class="table table-bordered table-condensed table-hover" id="table-attendances">
		<thead>
			<tr>
			  <th colspan="1">日付</th>
				<th colspan="1">曜日</th>
				<th colspan="1">出社</th>
				<th colspan="1">退社</th>
				<th colspan="1">翌日</th>
				<th colspan="1">在社時間</th>
				<th colspan="1">備考</th>
				<th colspan="1">指示者確認印</th>
			</tr>
		</thead>
		<tbody>
			<% @attendances.each do |day| %>
				<%= f.fields_for "attendances[]", day do |attendance| %>
					<% if day.only_day == 1 %>
		  			<td><%= l(day.worked_on, format: :short) %></td>
		  			<td><%= $days_of_the_week[day.worked_on.wday] %></td>
		  			<td><%= attendance.datetime_select :after_started_at, { :discard_year => true,  :discard_month => true, :discard_day => true , selected: day.started_at, include_blank: true } %></td>
		
		  			<td><%= attendance.datetime_select :after_finished_at, { :discard_year => true,  :discard_month => true, :discard_day => true , selected: day.finished_at, include_blank: true } %></td>
		
		  			<td>
		  			
		  			<%= attendance.check_box :tommorow_flag %>
		  
		  			</td>
		  			<td></td>
		  			<td>
		  			  <%= attendance.text_field :note %>
		  			</td>
		  			
		  			<td>
		  				<%= attendance.collection_select :who_consent, User.where(superior: true), :id, :name, {include_blank: '選択してください' }, :prompt => true %> 
		  			
		  			</td>
		
					<% end %>
				<% end %>
			</tr>
	  	<% end %>
		
		
		</tbody>
	</table>
		 <%= f.submit "勤怠変更申請の確認画面へ移動するする", class:"btn btn-primary" %>
	  <%= link_to "キャンセル", '#' %>
<% end %>


